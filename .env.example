# Dasher environment variables — copy to .env and fill in values

# Backend
DATABASE_URL=sqlite+aiosqlite:///./data/dasher.db
# Required — app refuses to start with the default "changeme" value.
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=changeme-generate-a-real-secret
# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost,http://localhost:80

# Home Assistant
HASS_URL=http://homeassistant.local:8123
HASS_TOKEN=

# SABnzbd
SABNZBD_URL=http://sabnzbd.local:8080
SABNZBD_API_KEY=

# Unifi
UNIFI_URL=https://unifi.local
UNIFI_USER=
UNIFI_PASS=

# Ollama
OLLAMA_URL=http://host.docker.internal:11434

# Gmail (OAuth2 — obtain refresh token via Google OAuth Playground)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# Frontend URLs (used by nginx / Vite proxy)
VITE_API_BASE_URL=http://localhost/api
VITE_WS_URL=ws://localhost/api/ws
